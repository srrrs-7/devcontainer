{
  "name": "play-devcontainer",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.1.38",
  "scripts": {
    "dev": "bunx turbo run dev",
    "test": "bunx turbo run test",
    "test:run": "bunx turbo run test:run",
    "db:migrate:dev": "bunx turbo run db:migrate:dev",
    "db:migrate:reset": "bunx turbo run db:migrate:reset",
    "db:migrate:deploy": "bunx turbo run db:migrate:deploy",
    "db:seed": "bunx turbo run db:seed",
    "db:studio": "bunx turbo run db:studio",
    "db:generate": "bunx turbo run db:generate",
    "clean": "bunx turbo run clean",
    "check:type": "tsc --noEmit",
    "build": "bunx turbo run build",
    "format": "biome format --write",
    "check": "bunx turbo run check check:biome check:spell check:type",
    "check:biome": "biome check .",
    "check:spell": "cspell lint . --gitignore --report=simple --dot",
    "fix:biome": "biome format . --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.5",
    "cspell": "^9.2.1",
    "husky": "^9.1.7",
    "turbo": "^2.5.8"
  }
}

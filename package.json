{
  "name": "play-devcontainer",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "dev": "bun --filter web dev",
    "dev:api": "bun --filter api dev",
    "dev:web": "bun --filter web dev",
    "dev:all": "bun run --workspaces dev",
    "start:api": "bun --filter api start",
    "start:web": "bun --filter web start",
    "test": "bun test --watch",
    "test:ws": "bun test",
    "db:migrate:dev": "bun --filter @packages/db db:migrate:dev",
    "db:migrate:reset": "bun --filter @packages/db db:migrate:reset",
    "db:migrate:deploy": "bun --filter @packages/db db:migrate:deploy",
    "db:seed": "bun --filter @packages/db db:seed",
    "db:studio": "bun --filter @packages/db db:studio",
    "db:generate": "bun --filter @packages/db db:generate",
    "clean": "bun run --workspaces clean",
    "clean:api": "bun --filter api clean",
    "clean:web": "bun --filter web clean",
    "check:type": "tsc --noEmit",
    "check:type:ws": "bun run --workspaces check:type",
    "build": "bun run clean && bun run db:generate && bun run --workspaces build",
    "build:api": "bun --filter api build",
    "build:web": "bun --filter web build",
    "format": "biome format --write",
    "check": "bun run check:type:ws && bun run check:biome && bun run check:spell",
    "check:biome": "biome check .",
    "check:spell": "cspell lint . --gitignore --report=simple --dot",
    "fix:biome": "biome format . --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.5",
    "cspell": "^9.2.1",
    "husky": "^9.1.7"
  }
}

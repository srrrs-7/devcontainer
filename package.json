{
  "name": "play-devcontainer",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.0",
  "scripts": {
    "dev": "bun run --filter web dev",
    "dev:api": "bun run --filter api dev",
    "dev:web": "bun run --filter web dev",
    "dev:all": "bun --workspaces dev",
    "start:api": "bun run --filter api start",
    "start:web": "bun run --filter web start",
    "test": "cd apps/api && npm run test",
    "test:watch": "cd apps/api && npm run test:watch",
    "db:migrate:dev": "bun run --filter @packages/db db:migrate:dev",
    "db:migrate:reset": "bun run --filter @packages/db db:migrate:reset",
    "db:migrate:deploy": "bun run --filter @packages/db db:migrate:deploy",
    "db:seed": "bun run --filter @packages/db db:seed",
    "db:studio": "bun run --filter @packages/db db:studio",
    "db:generate": "bun run --filter @packages/db db:generate",
    "clean": "bun --workspaces clean",
    "clean:api": "bun run --filter api clean",
    "clean:web": "bun run --filter web clean",
    "check:type": "bun --workspaces check:type",
    "build:ws": "bun run --workspaces build",
    "build:api": "bun run --filter api build",
    "build:web": "bun run --filter web build",
    "format": "biome format --write",
    "check": "bun run check:type && bun run check:biome && bun run check:spell",
    "check:biome": "biome check --write",
    "check:spell": "cspell lint . --gitignore --report=simple --dot",
    "prepare": "husky"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.5",
    "cspell": "^9.2.1",
    "husky": "^9.1.7"
  }
}
